{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "declaration": false,
    "emitDeclarationOnly": false,
    "outDir": "./dist/libs",
    "rootDir": "./src/libs",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/libs/**/*"],
  "exclude": ["node_modules"]
}
